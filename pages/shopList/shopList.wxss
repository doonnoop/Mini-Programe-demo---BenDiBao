.shop {
    display: flex;
    position: relative;
    font-size: 14px;
}
.shop-img {
    width: 160rpx;
    height: 160rpx;
    margin-right: 20rpx;
}
.shop-info {
    width: 520rpx;
    display: flex;
    flex-direction: column; 
    font-size: 12px;
    color: #666;
    line-height: 1.5;
}
.shop-title {
    color: #333;
    font-size: 16px;
    width: 380rpx;
}
.shop-star {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}