/**index.wxss**/
.slider {
  width: 100%;
  height: 390rpx;
  overflow: hidden;
}
.slider image, .slider swiper{
  width: 100%;
  height: 390rpx;
}

.index-nav {
  display: flex;
  flex-wrap: wrap;
}
.index-nav .nav-item {
  width: 33.333333%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  border-bottom: 1rpx solid #ccc;
}
.index-nav .nav-item:nth-child(3n)::after {
  width: 0;
}
.nav-item image {
  width: 80rpx;
  height: 80rpx;
}

.index-enter{
  display: flex;
  padding: 20rpx 25rpx;
}
.index-enter .enter-item {
  width: 50%;
  display: flex;
  justify-content: center;
}
.enter-item image {
  width: 320rpx;
  height: 178rpx;
}

